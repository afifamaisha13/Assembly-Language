.model small
.stack 100h
.data
a db 'ENTER A HEX DIGIT:$'
b db 'IN DECIMAL IT IS: 1'
c db ?,'$'
n db 0ah,0dh,'$'  
.code 
main proc
    mov ax,@data
    mov ds,ax
    
    lea dx,a
    mov ah,09h
    int 21h
    
    mov ah,1
    int 21h
    mov c,al
    
    lea dx,n
    mov ah,09h
    int 21h
    
    sub c,11h 
    
    lea dx,b
    mov ah,09h
    int 21h
    
    exit:
    mov ah,4ch
    int 21h
    main endp
end main
